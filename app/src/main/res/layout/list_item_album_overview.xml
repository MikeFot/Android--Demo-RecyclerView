<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp"
    card_view:cardBackgroundColor="@color/window_background_alt"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:elevation="@dimen/medium_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_4dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:scaleType="center"
            tools:src="@drawable/preview_thumbnail_image"/>

        <me.grantland.widget.AutofitLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_toRightOf="@id/image">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                autofit:minTextSize="@dimen/text_size_medium"
                tools:text="reprehenderit est deserunt velit ipsam reprehenderit est deserunt velit ipsam"/>
        </me.grantland.widget.AutofitLayout>


        <me.grantland.widget.AutofitLayout
            android:id="@+id/layout_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_toRightOf="@id/image">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/secondary_text"
                autofit:minTextSize="@dimen/text_size_small"
                tools:text="http://placehold.it/600/771796"/>
        </me.grantland.widget.AutofitLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>